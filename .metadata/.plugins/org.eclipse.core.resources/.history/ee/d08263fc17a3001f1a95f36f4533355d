        if (!menuList.isEmpty()) { 
        	for(Menu menu : menuList)
        	{
    %>
        <h2>Name: <%= menu.getName() %></h2>
        <p>Description: <%= menu.getDescription() %></p>
        <p>Price: â‚¹<%= menu.getPrice() %></p>
        <p>Rating: <%= menu.getRating() %></p>
        <p>Available: <%= menu.isAvailable() ? "Yes" : "No" %></p>
        
        <% 
        	}%>
        	
        <% } %>
    <%  else {
    %>
        <p>No menu details found.</p>
    <% } %>
</body>
